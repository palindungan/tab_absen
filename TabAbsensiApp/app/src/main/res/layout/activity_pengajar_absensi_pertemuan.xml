<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Pengajar.AbsensiPertemuan.PengajarAbsensiPertemuanActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nama_pengajar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pengajar " />

        <TextView
            android:id="@+id/tv_kelas_pertemuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Pelajaran ( hari , jam - jam , harga )" />

        <TextView
            android:id="@+id/tv_hari_mulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hari Mulai" />

        <TextView
            android:id="@+id/tv_jam_mulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jam Mulai" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi : " />

        <Button
            android:id="@+id/btn_batal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batalkan Pertemuan" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Next" />

</RelativeLayout>